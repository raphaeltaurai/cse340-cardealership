<% if (title) { %>
  <h1><%= title %></h1>
<% } %>
<% if (errors && errors.errors && errors.errors.length > 0) { %>
  <div class="notice">
    <ul>
      <% errors.errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>
<div class="vehicle-detail">
  <img src="<%= vehicle.inv_image %>" alt="Photo of <%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %>" class="vehicle-image">
  <div class="vehicle-info">
    <h2>Vehicle Details</h2>
    <p><strong>Make:</strong> <%= vehicle.inv_make %></p>
    <p><strong>Model:</strong> <%= vehicle.inv_model %></p>
    <p><strong>Year:</strong> <%= vehicle.inv_year %></p>
    <p><strong>Price:</strong> $<%= new Intl.NumberFormat("en-US").format(vehicle.inv_price) %></p>
    <p><strong>Mileage:</strong> <%= new Intl.NumberFormat("en-US").format(vehicle.inv_miles) %> miles</p>
    <p><strong>Description:</strong> <%= vehicle.inv_description %></p>
  </div>
</div>
<form action="/offers/buy/<%= vehicle.inv_id %>" method="post" class="account-login-form" style="max-width:500px;margin:2rem auto;">
  <fieldset>
    <legend>Enter Your Offer</legend>
    <div class="form-group">
      <label for="offer_price">Offer Price ($):</label>
      <input type="number" name="offer_price" id="offer_price" min="1" step="0.01" required value="<%= offer_price %>">
    </div>
    <button type="submit" class="btn-main">Submit Offer</button>
  </fieldset>
</form> 