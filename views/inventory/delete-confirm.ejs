<% if (title) { %>
    <h1><%= title %></h1>
  <% } %>
  
  <%- messages() %>
  <% if (typeof errors !== 'undefined' && errors && errors.errors && errors.errors.length > 0) { %>
    <div class="notice">
      <ul>
        <% errors.errors.forEach(function(error) { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>
  
  <form action="/inv/delete" method="post" class="account-login-form" id="editInventoryForm" novalidate>
    <div class="form-group">
      <label for="inv_make">Make:</label>
      <input type="text" id="inv_make" name="inv_make" maxlength="50" required readonly value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>">
    </div>
    <div class="form-group">
      <label for="inv_model">Model:</label>
      <input type="text" id="inv_model" name="inv_model" maxlength="50" required readonly value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>">
    </div>
    <div class="form-group">
      <label for="inv_year">Year:</label>
      <input type="number" id="inv_year" name="inv_year" min="1886" max="2099" required readonly value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>">
    </div>
    <div class="form-group">
      <label for="inv_price">Price:</label>
      <input type="number" id="inv_price" name="inv_price" min="0" step="1" required readonly value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>">
    </div>
    <p>Confirm Deletion - The delete is permanent.</p>
    <input type="hidden" name="inv_id" value="<%= typeof inv_id !== 'undefined' ? inv_id : '' %>">
    <button id="updateForm" type="submit">Delete Vehicle</button>
  </form>
  